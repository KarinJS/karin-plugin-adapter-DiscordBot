{
  "name": "@karinjs/plugin-adapter-discordbot",
  "version": "1.0.0",
  "author": "karin",
  "type": "module",
  "main": "lib/index.js",
  "description": "基于Karin编写的DiscordBot适配器",
  "homepage": "https://github.com/KarinJS/karin-plugin-adapter-DiscordBot",
  "bugs": {
    "url": "https://github.com/KarinJS/karin-plugin-adapter-DiscordBot/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KarinJS/karin-plugin-adapter-DiscordBot.git"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "pub": "npm publish --access public",
    "sort": "npx sort-package-json",
    "dev": "tsx src/app.ts",
    "karin": "karin"
  },
  "devDependencies": {
    "@types/node": "^22.15.27",
    "eslint": "^9.27.0",
    "node-karin": "^1.9.8",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "karin": {
    "main": "src/index.ts",
    "web": "./lib/web.config.js",
    "ts-web": "./src/web.config.ts",
    "apps": [
      "lib/apps"
    ],
    "ts-apps": [
      "src/apps"
    ],
    "static": [
      "resources"
    ],
    "files": [
      "config",
      "data",
      "resources"
    ],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "lib/**/*",
      "@karinjs/**/*"
    ]
  },
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts",
    "/config",
    "resources",
    "CHANGELOG.md",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "eris": "^0.18.0"
  }
}